<li id="comment-<%=comment._id%>">
    <%= comment.content%>
<br>
<small><%=comment.user.name%></small>
<%if(locals.user){%>
    <small>
        <a class="toggle-like-button" data-likes="<%=comment.likes.length%>" href="/likes/toggle/<%=comment._id%>/Comment"><%=comment.likes.length%> Likes</a>
    </small>
    <%}else{%>
        <%=comment.likes.length%> Likes
        <%}%>
</p>
<p>
    <% if(locals.user && locals.user.id==comment.user.id){%>
        <a class="delete-comment-button" href="/comment/distroy/<%=comment.id%>">x</a>
        <%}%>
</p>

</li>